{
  "compilerOptions": {
    "outDir": "./dist", // Saída para arquivos compilados
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "strict": true,
    "rootDir": "./src", // Diretório raiz de entrada
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}